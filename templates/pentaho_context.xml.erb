<?xml version="1.0" encoding="UTF-8"?>
<Context path="/pentaho" docbase="pentaho.war">
        <Resource name="jdbc/Hibernate" auth="Container" type="javax.sql.DataSource"
                factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxActive="20" maxIdle="5"
                maxWait="10000" username="hibuser" password="<%= hibuser_password %>"
                driverClassName="<%= driverClassName %>" url="<%= hibernateURL %>"
                validationQuery="select 1" />
                
        <Resource name="jdbc/Quartz" auth="Container" type="javax.sql.DataSource"
                factory="org.apache.commons.dbcp.BasicDataSourceFactory" maxActive="20" maxIdle="5"
                maxWait="10000" username="<%= pentaho_user %>" password="<%= pentaho_password %>"
                driverClassName="<%= driverClassName %>" url="<%= quartzURL %>"
                validationQuery="select 1"/>
</Context>

